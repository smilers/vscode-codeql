{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2021",
    "outDir": "out",
    "lib": ["ES2021", "dom"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "rootDir": "../..",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
